{
  "name": "email-follow-up",
  "displayName": "Email follow up",
  "version": "0.0.1",
  "description": "A Basic browser extension for sending follow-up emails",
  "author": "Youssef El Mahallawy",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1815",
    "verbose": "plasmo dev --verbose",
    "verbose:plasmo": "next dev --port 1815",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@google-cloud/local-auth": "2.1.0",
    "@mantine/carousel": "6.0.21",
    "@mantine/core": "6.0.21",
    "@mantine/dates": "6.0.21",
    "@mantine/dropzone": "6.0.21",
    "@mantine/form": "^7.1.5",
    "@mantine/hooks": "6.0.21",
    "@mantine/modals": "6.0.21",
    "@mantine/notifications": "6.0.21",
    "@mantine/tiptap": "^7.1.5",
    "@plasmohq/messaging": "^0.5.0",
    "@tabler/icons-react": "^2.39.0",
    "@tiptap/extension-highlight": "^2.1.12",
    "@tiptap/extension-link": "^2.1.12",
    "@tiptap/extension-subscript": "^2.1.12",
    "@tiptap/extension-superscript": "^2.1.12",
    "@tiptap/extension-text-align": "^2.1.12",
    "@tiptap/extension-underline": "^2.1.12",
    "@tiptap/pm": "^2.1.12",
    "@tiptap/react": "^2.1.12",
    "@tiptap/starter-kit": "^2.1.12",
    "dayjs": "^1.11.10",
    "embla-carousel-react": "^8.0.0-rc14",
    "googleapis": "^127.0.0",
    "moment": "^2.29.4",
    "next": "13.4.19",
    "plasmo": "0.83.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.11.0",
    "react-use": "^17.4.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@plasmohq/rps": "1.8.7",
    "@plasmohq/storage": "^1.8.1",
    "@types/chrome": "0.0.245",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "prettier": "3.0.3",
    "typescript": "^5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "cookies",
      "storage",
      "scripting"
    ]
  }
